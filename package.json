{
  "name": "@matheustrres/messari-client",
  "author": {
    "name": "Matheus Torres",
    "email": "matheustrres.rj@gmail.com"
  },
  "description": "A lightweight, unofficial, easy-to-use and dependency-free Node.js client to fetch cryptocurrency data from Messari API",
  "version": "1.0.7",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matheustrres/messari-client.git"
  },
  "bugs": {
    "url": "https://github.com/matheustrres/messari-client/issues"
  },
  "scripts": {
    "build": "tsc --build ./tsconfig.build.json",
    "bundle": "npm run build && npm pack",
    "test": "dotenv -e .env -- jest --runInBand",
    "format": "prettier --write \"{lib,tests}/**/*.ts\"",
    "lint": "eslint \"{lib,tests}/**/*.ts\" --fix"
  },
  "devDependencies": {
    "@swc/core": "^1.3.70",
    "@swc/jest": "^0.2.27",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "jest": "^29.6.1",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "node.js",
    "messari",
    "messari-wrapper",
    "client",
    "wrapper",
    "easy-to-use"
  ]
}
