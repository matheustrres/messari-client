{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}