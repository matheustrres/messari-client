{
  "compilerOptions": {
    "target": "es2021",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
}